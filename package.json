{
  "name": "nodejs_typescript_example",
  "version": "1.0.0",
  "description": "1 example project với nodejs và typescript",
  "author": "Lê Văn Tiến",
  "license": "ISC",
  "main": "index.js",
  "scripts": {
    "build": "babel src -d dist --extensions \".ts\" --config-file ./.babelrc",
    "start": "node dist/index.js",
    "start_scraping": "node dist/scraping/scrapingRbauction.js",
    "pm2": "pm2 start dist/index.js --name=homepage --watch=true --instances=4",
    "pm2_delete": "pm2 delete homepage",
    "dev": "ts-node-dev -r tsconfig-paths/register src/index.ts",
    "dev_scraping": "ts-node-dev -r tsconfig-paths/register src/scraping/scrapingRbauction.ts",
    "dev_cluster": "ts-node-dev -r tsconfig-paths/register src/cluster.ts",
    "debug": "ts-node-dev --inspect=9229 -r tsconfig-paths/register src/index.ts"
  },
  "dependencies": {
    "axios": "0.19.2",
    "cors": "2.8.5",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "express-rate-limit": "^5.1.3",
    "express-validator": "^6.6.0",
    "firebase": "^7.17.1",
    "firebase-admin": "^9.0.0",
    "helmet": "^3.23.3",
    "mongoose": "5.9.24",
    "pm2": "^4.4.0",
    "puppeteer": "5.2.0",
    "redis": "3.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.0",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-typescript": "^7.10.4",
    "@types/axios": "0.14.0",
    "@types/cors": "2.8.6",
    "@types/express": "4.17.7",
    "@types/express-rate-limit": "^5.0.0",
    "@types/helmet": "0.0.47",
    "@types/mongoose": "5.7.32",
    "@types/node": "14.0.24",
    "@types/puppeteer": "3.0.1",
    "@types/redis": "2.8.25",
    "babel-plugin-module-resolver": "^4.0.0",
    "core-js": "^3.6.5",
    "ts-node-dev": "1.0.0-pre.51",
    "tsconfig-paths": "^3.9.0",
    "typescript": "3.9.6"
  }
}
